extends base

block append head
    link(rel='stylesheet' href='/css/bookings.css')

block content
  .container
    h1 My Bookings

    if bookings.length > 0
      ul.bookings-list
        each booking in bookings
          li.booking-item
            .booking-info
              h2= booking && booking.tour ? booking.tour.name : 'Tour name not available'
              p Booking Price: $#{booking && booking.price}
              p Booking Date: #{booking && booking.createdAt}
              if booking && booking.paid
                p.status.paid Paid
              else
                p.status.not-paid Not Paid
    else
      p No bookings found.

    a.btn(href="/tours") Browse More Tours
